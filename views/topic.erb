
     <div class="jumbotron">
        <h4><strong>Topic: </strong><%= "#{@topic['topic_title']}" %></h4>
        <p class="lead"></p>
        <p class="lead"><%= "#{@topic['topic_contents']}"%></p>
        <p class="lead">Topic posted by: <%= "#{@author['name']}" %></p>
        <p class="lead">
        <a href= "/topic_upvote/<%="#{@id}"%>"><button type="button" class="btn btn-primary">Up Vote</button></a> 
        <a href= "/topic_downvote/<%="#{@id}"%>"><button type="button" class="btn btn-danger">Down Vote</button></a>
        <h4>Score: <%= "#{@topic['topics_score']}" %>
      </div>
      <div class="row marketing">
        <div class="col-lg-6">
          <h4>Comments:</h4>
          <% @comments.each do |comment| %>
          <p>Comment: <%= "#{comment["comment_contents"]}"%></p>
          <% end %>
          <h4>Total comments: <%="#{@comment_totals['count']}"%></h4>
          <p><a class="btn btn-lg btn-success" href="/topic/<%="#{@id}"%>/comment" role="button">post a comment</a></p>
        </div>
